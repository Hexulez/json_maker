<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Json converter!{% endblock %}</title>
          <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">

        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block body %}
            <form method="post" action="">
                <label for="tokenId">Enter the starting tokenId:</label>
                <input type="text" name="tokenId" id="tokenId" required>

                <label for="imagelocation">Enter the image location folder:</label>
                <input type="text" name="imagelocation" id="imagelocation" required>

                <label for="description">Enter the description:</label>
                <input type="text" name="description" id="description" required>

                <button type="submit" name="submit">Create JSON files</button>
            </form>

            {% if jsonData %}
                <div>
                    {% for json in jsonData %}
                        <p>{{ json }}</p>
                    {% endfor %}
                </div>
            {% endif %}
        {% endblock %}
         <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

    </body>
</html>
